﻿@using System.Security.Claims
<h1>Perfil</h1>


<ul class="list-group">
    <li class="list-group-item">Username: @Context.User.Identity.Name</li>
    <li class="list-group-item">Nombre: @Context.User.Identity.Name</li>
    <li class="list-group-item">@Context.User.FindFirst("Apellidos")</li>
    <li class="list-group-item">@Context.User.FindFirst("Email")</li>
    <li class="list-group-item">
        <img src="~/images/@Context.User.FindFirst("Fotoperfil").Value" style="width:200px; height150px"/>
    </li>
</ul>